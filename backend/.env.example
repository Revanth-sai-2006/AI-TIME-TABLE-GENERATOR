# Server
NODE_ENV=development
PORT=5000

# MongoDB
MONGO_URI=mongodb://localhost:27017/timetable_db
# MONGO_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/timetable_db

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_change_in_production
JWT_REFRESH_EXPIRE=30d

# Client origin (CORS)
CLIENT_ORIGIN=http://localhost:5173

# Google Cloud (for GCP deployment)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./gcp-service-account.json

# Gemini AI (for future AI integration)
GEMINI_API_KEY=your_gemini_api_key_here

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# Logging
LOG_LEVEL=info
